<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:scrollbars="none"
    android:textDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/hedar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/shadow_start"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/circleView"
                android:layout_centerHorizontal="true"
                android:text="YOUER PROFILE"
                android:textColor="@color/background_color"
                android:textSize="16dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/blank_profile_picture" />

            <TextView
                android:id="@+id/pluse"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/circleView"
                android:layout_alignLeft="@id/circleView"
                android:layout_marginLeft="35dp"
                android:background="@drawable/circle_shape_white"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/background_color"
                android:textSize="16dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/background_color"
            android:elevation="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"

                android:padding="5dp"
                android:text="NAME"
                android:textColor="@color/black"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="mobile"

                android:textColor="@color/black"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="16dp"

                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>