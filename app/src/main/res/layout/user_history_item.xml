<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/cardView_recipe"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_margin="@dimen/margin_list"--><!--android:clickable="true"--><!--android:focusable="true"--><!--android:foreground="?android:attr/selectableItemBackground"--><!--android:layoutDirection="ltr"--><!--android:padding="5dp"--><!--android:textDirection="ltr"--><!--app:cardCornerRadius="4dp"--><!--app:cardElevation="6dp">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_list"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="5dp"
    android:textDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/dimImg"
            android:layout_height="@dimen/dimImg"
            android:layout_margin="1dp" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_weight="0.1"
            android:padding="3dp"
            android:text="ggghhhh"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:background="#000"
            android:scaleY="20"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/shadow_back" />

</LinearLayout><!--</android.support.v7.widget.CardView>-->