<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ps.wwbtraining.teacher_group1.Fragment.CreateQuiz"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Name Quiz"
    android:id="@+id/nameQuiz"

    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:hint="Description"
    />
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/questionText"
         android:hint="Question"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Type question :"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="18sp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="true/false"
            android:layout_weight="1"

            />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose question" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/frameQuestion"
        android:layout_width="match_parent"
        android:layout_height="281dp">
        
    </FrameLayout>

    <LinearLayout
        android:layout_width=""
        android:layout_height=""></LinearLayout>
    
</LinearLayout>
